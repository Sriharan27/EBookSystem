@model Books
@{
    Layout = "~/Views/Home/HomeLayout.cshtml";
}

<div style="width: 80%; margin: auto; text-align: center; font-family: Arial, sans-serif;">
    <!-- Heading -->
    <h2 style="font-size: 2rem; font-weight: bold; margin-bottom: 20px; color: #333;">Shopping Cart</h2>

    <table class="table-shopping-cart" style="width: 100%; border-collapse: collapse; margin-bottom: 20px; text-align: left; table-layout: fixed;">
        <thead>
            <tr>
                <th style="border: 1px solid #ddd; padding: 10px; background-color: #f8f8f8; font-weight: bold; text-transform: uppercase; font-size: 0.9rem; color: #555; width: 50%;">Book</th>
                <th style="border: 1px solid #ddd; padding: 10px; background-color: #f8f8f8; font-weight: bold; text-transform: uppercase; font-size: 0.9rem; color: #555; width: 25%;">Quantity</th>
                <th style="border: 1px solid #ddd; padding: 10px; background-color: #f8f8f8; font-weight: bold; text-transform: uppercase; font-size: 0.9rem; color: #555; width: 25%;">Action</th>
            </tr>
        </thead>
        <tbody class="header-cart-wrapitem">
            <!-- Items will be dynamically loaded here by JavaScript -->
        </tbody>
    </table>


    <!-- Actions -->
    <div style="display: flex; justify-content: center; gap: 20px;">
        <button class="update-cart-btn" style="padding: 10px 20px; border: 1px solid #ddd; background-color: #f4f4f4; color: #333; cursor: pointer; font-size: 1rem; font-weight: bold; border-radius: 5px; transition: background-color 0.3s ease;"
                onmouseover="this.style.backgroundColor='#ddd'" onmouseout="this.style.backgroundColor='#f4f4f4'">
            Update Cart
        </button>
        <button id="buyNowBtn" data-user-id="@((Context.Session.GetInt32("UserID") ?? 0))"
                style="padding: 10px 20px; border: 1px solid #333; background-color: #333; color: white; cursor: pointer; font-size: 1rem; font-weight: bold; border-radius: 5px; transition: background-color 0.3s ease;"
                onmouseover="this.style.backgroundColor='#555'" onmouseout="this.style.backgroundColor='#333'">
            Buy Now
        </button>
    </div>
</div>

@section Scripts {
    <script src="~/js/cart.js"></script>
}
