</head>
<body style="margin:0px">

    <!-- header section strats -->
    <header class="header_section">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg custom_nav-container">
                <a class="navbar-brand" href="index.html">
                    <span>EBook</span>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link pl-lg-0" href="@Url.Action("Index", "Home")">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="about.html"> About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="categories.html">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="blog.html"> Blog </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="contact.html">Contact Us</a>
                        </li>
                    </ul>

                    <form class="search_form" method="GET" action="/Home/SearchBooks">
                        <input type="text" name="query" class="form-control" placeholder="Search here...">
                        <button class="" type="submit">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </button>
                    </form>

                    <!-- Cart Icon with Notification Badge -->
                    <div class="icon-header-item cl2 hov-cl1 trans-04 js-show-cart"
                         style="position: relative; display: inline-block; font-size: 26px; color: white; padding: 10px 25px;"
                         onmouseover="this.style.color='#717FE0';" onmouseout="this.style.color='white';" onclick="window.location.href = '/Home/CartPage';">
                        <i class="fas fa-shopping-cart"></i>
                        <span class="icon-header-noti"
                              style="position: absolute; top: 0; right: -2px; background-color: #ff4d4d; color: white; font-size: 12px;
                                    padding: 3px 6px; border-radius: 50%; font-weight: bold; display: none;">0</span>
                    </div>

                    <!-- Account Icon and Dropdown -->
                    <div class="icon-header-item cl2 hov-cl1 trans-04 dropdown">
                        <a class="nav-link dropdown-toggle js-show-login" href="#" id="loginDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                           style="font-size: 26px; color: white;"
                           onmouseover="this.style.color='#717FE0';"
                           onmouseout="this.style.color='white';">
                            <i class="fas fa-user"></i>
                        </a>

                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="loginDropdown"
                             style="border-radius: 0.5rem; background-color: #fff; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 0.5rem;">
                            @if (Context.Session.GetInt32("UserID") != null)
                            {
                                <a class="dropdown-item"
                                   href="@Url.Action("ManageOrders", "Home")"
                                   style="border-radius: 0.25rem; padding: 0.5rem 1rem; color: #333; display: block; text-decoration: none;"
                                   onmouseover="this.style.backgroundColor='#717FE0'; this.style.color='white';"
                                   onmouseout="this.style.backgroundColor=''; this.style.color='#333';">
                                    View/Delete Orders
                                </a>

                                <hr />

                                <a class="dropdown-item"
                                   href="@Url.Action("Logout", "Home")"
                                   style="border-radius: 0.25rem; padding: 0.5rem 1rem; color: #333; display: block; text-decoration: none;"
                                   onmouseover="this.style.backgroundColor='#717FE0'; this.style.color='white';"
                                   onmouseout="this.style.backgroundColor=''; this.style.color='#333';">Logout</a>
                            }
                            else
                            {
                                <a class="dropdown-item" href="javascript:void(0);"
                                   onclick="window.location.href = '/Home/LoginPage';"
                                   style="border-radius: 0.25rem; padding: 0.5rem 1rem; color: #333; display: block; text-decoration: none;"
                                   onmouseover="this.style.backgroundColor='#717FE0'; this.style.color='white';"
                                   onmouseout="this.style.backgroundColor=''; this.style.color='#333';">Login</a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="">
        <main role="main" class="pb-3 m-0 p-0">
            @RenderBody()
        </main>
    </div>

    <!-- info section -->

    <section class="info_section layout_padding2">
