@model List<Orders>
@{
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}
<h2 class="text-center mb-5">Order Report</h2>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-controller="Admin" asp-action="OrderExcelGenerate">Download Report</a>
    </div>
</div>

<div class="table-responsive d-none d-md-block">
    <table id="tableCss" class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Customer Address</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.User.Name</td>
                    <td>@order.User.Email</td>
                    <td>@order.User.Address</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.TotalAmount</td>
                    <td>@order.Status</td>
                    <td style="white-space:nowrap">
                        <a class="btn btn-sm btn-outline-primary"
                           asp-controller="Admin"
                           asp-action="ViewOrder"
                           asp-route-id="@order.OrderId"
                           title="View Order Details"
                           style="transition: background-color 0.3s ease;">
                            <i class="bi bi-list-ul"></i> View LineItems
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tableCss').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                info: true
            });

        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                            Swal.fire({
                                icon: 'success',
                            title: 'Success!',
                            text: '@TempData["SuccessMessage"]',
                            confirmButtonText: 'OK'
                                    });
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                            Swal.fire({
                                icon: 'error',
                            title: 'Error!',
                            text: '@TempData["ErrorMessage"]',
                            confirmButtonText: 'OK'
                                    });
            </text>
        }
                    });
    </script>
}